<% page_articles.each do |article| %>
  <article class="mb-24">
    <header class="mb-4">
      <h2 class="text-2xl md:text-4xl font-bold leading-tight"><%= link_to title(article.title), article %></h2>
      <p class="text-sm"><%= article.date.strftime("%B %Y") %></p>
    </header>
    <main class="prose dark:prose-invert">
      <%= article.body %>
    </main>
  </article>
<% end %>
